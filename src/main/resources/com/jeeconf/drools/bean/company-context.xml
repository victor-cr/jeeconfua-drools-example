<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation=" http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="infopulse" class="com.jeeconf.drools.bean.Company">
        <constructor-arg index="0" value="Infopulse Ukraine"/>
        <constructor-arg index="1">
            <list value-type="com.jeeconf.drools.bean.Role">
                <value>IT</value>
            </list>
        </constructor-arg>
    </bean>

    <bean id="luxoft" class="com.jeeconf.drools.bean.Company">
        <constructor-arg index="0" value="Luxoft Ukraine"/>
        <constructor-arg index="1">
            <list value-type="com.jeeconf.drools.bean.Role">
                <value>IT</value>
            </list>
        </constructor-arg>
    </bean>
</beans>